{
    "compilers": [
        {
            "name": "clang",
            "run-command": "/usr/clang-12/bin/clang++ -stdlib=libc++ -c {compiler_flags} {file_to_compile} -o {obj_file}"
        },
        {
            "name": "gcc",
            "run-command": "/usr/gcc-10.3/bin/g++ -c {compiler_flags} {file_to_compile} -o {obj_file}"
        }
    ],
    "builds": [
        {
            "name": "clang-03-O0",
            "compiler": "clang",
            "flags": "-std=c++03 -O0"
        },
        {
            "name": "clang-03-O3",
            "compiler": "clang",
            "flags": "-std=c++03 -O3"
        },


