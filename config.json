{
    "compilers": [
        {
            "name": "clang",
            "run-command": "clang {compiler_flags} {file_to_compile}"
        },
        {
            "name": "gcc",
            "run-command": "clang {compiler_flags} {file_to_compile}"
        }
    ],
    "build": [
        {
            "name": "clang-03-O0",
            "compiler": "clang",
            "flags": "-std=C++03 -O0"
        },
        {
            "name": "clang-03-O3",
            "compiler": "clang",
            "flags": "-std=C++03 -O3"
        },


        {
            "name": "clang-17-O0",
            "compiler": "clang",
            "flags": "-std=C++1z -O0"
        },
        {
            "name": "clang-17-O3",
            "compiler": "clang",
            "flags": "-std=C++1z -O3"
        },

        {
            "name": "clang-20-O0",
            "compiler": "clang",
            "flags": "-std=C++2a -O0"
        },
        {
            "name": "clang-20-O3",
            "compiler": "clang",
            "flags": "-std=C++2a -O3"
        },



        {
            "name": "gcc-03-O0",
            "compiler": "gcc",
            "flags": "-std=C++03 -O0"
        },
        {
            "name": "gcc-03-O3",
            "compiler": "gcc",
            "flags": "-std=C++03 -O3"
        },


        {
            "name": "gcc-17-O0",
            "compiler": "gcc",
            "flags": "-std=C++1z -O0"
        },
        {
            "name": "gcc-17-O3",
            "compiler": "gcc",
            "flags": "-std=C++1z -O3"
        },

        {
            "name": "gcc-20-O0",
            "compiler": "gcc",
            "flags": "-std=C++2a -O0"
        },
        {
            "name": "gcc-20-O3",
            "compiler": "gcc",
            "flags": "-std=C++2a -O3"
        }
    ],
    "config": {
        "builds_per_test": 3
    },
    "sources": [
        {
            "file": "tested_sources/incrementable_03.cpp",
            "builds": ["gcc-03-00", "gcc-03-O3", "clang-03-00", "clang-03-O3"]
        },
        {
            "file": "tested_sources/incrementable_17.cpp",
            "builds": ["gcc-17-00", "gcc-17-O3", "clang-17-00", "clang-17-O3"]
        },
        {
            "file": "tested_sources/incrementable_20.cpp",
            "builds": ["gcc-20-00", "gcc-20-O3", "clang-20-00", "clang-20-O3"]
        },


        {
            "file": "tested_sources/optional_like_17.cpp",
            "builds": ["gcc-17-00", "gcc-17-O3", "clang-17-00", "clang-17-O3"]
        },
        {
            "file": "tested_sources/optional_like_20.cpp",
            "builds": ["gcc-20-00", "gcc-20-O3", "clang-20-00", "clang-20-O3"]
        },


        {
            "file": "tested_sources/concept_complexity_1.cpp",
            "builds": ["gcc-20-00", "gcc-20-O3", "clang-20-00", "clang-20-O3"]
        },
        {
            "file": "tested_sources/concept_complexity_2.cpp",
            "builds": ["gcc-20-00", "gcc-20-O3", "clang-20-00", "clang-20-O3"]
